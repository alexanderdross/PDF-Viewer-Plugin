{#
/**
 * @file
 * Template for the password-protected PDF access form.
 *
 * Available variables:
 * - pdf_document: The PDF document entity.
 * - form: The password form.
 */
#}
<div class="pdf-password-wrapper">
  <div class="pdf-password-container">
    <div class="pdf-password-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
      </svg>
    </div>
    <h2 class="pdf-password-title">{{ 'Password Protected'|t }}</h2>
    <p class="pdf-password-description">
      {{ 'This PDF document is protected. Please enter the password to view it.'|t }}
    </p>
    <div class="pdf-password-document">
      <strong>{{ pdf_document.title.value }}</strong>
    </div>
    <div class="pdf-password-form">
      {{ form }}
    </div>
  </div>
</div>

<style>
  .pdf-password-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
    padding: 40px 20px;
  }

  .pdf-password-container {
    max-width: 400px;
    width: 100%;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 40px;
    text-align: center;
  }

  .pdf-password-icon {
    color: #0073aa;
    margin-bottom: 20px;
  }

  .pdf-password-title {
    margin: 0 0 10px;
    font-size: 24px;
    color: #333;
  }

  .pdf-password-description {
    color: #666;
    margin-bottom: 20px;
  }

  .pdf-password-document {
    background: #f5f5f5;
    padding: 12px 20px;
    border-radius: 6px;
    margin-bottom: 20px;
  }

  .pdf-password-form input[type="password"] {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 16px;
    margin-bottom: 15px;
    transition: border-color 0.2s;
  }

  .pdf-password-form input[type="password"]:focus {
    border-color: #0073aa;
    outline: none;
  }

  .pdf-password-form input[type="submit"],
  .pdf-password-form button[type="submit"] {
    width: 100%;
    padding: 12px 20px;
    background: #0073aa;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .pdf-password-form input[type="submit"]:hover,
  .pdf-password-form button[type="submit"]:hover {
    background: #005a87;
  }
</style>
