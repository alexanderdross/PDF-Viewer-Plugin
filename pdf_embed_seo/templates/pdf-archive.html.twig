{#
/**
 * @file
 * Template for displaying the PDF archive page.
 *
 * Available variables:
 * - documents: Array of rendered PDF archive items.
 * - pager: The pager render array.
 * - filters: Optional taxonomy filters (premium feature).
 * - attributes: HTML attributes for the container.
 */
#}
<div{{ attributes.addClass('pdf-archive') }}>
  {% if filters is defined and filters %}
    <div class="pdf-archive-filters-wrapper">
      {{ filters }}
    </div>
  {% endif %}

  {% if documents %}
    <div class="pdf-archive-grid">
      {% for item in documents %}
        {{ item }}
      {% endfor %}
    </div>

    {% if pager %}
      <div class="pdf-archive-pager">
        {{ pager }}
      </div>
    {% endif %}
  {% else %}
    <div class="pdf-archive-empty">
      <p>{{ 'No PDF documents available.'|t }}</p>
    </div>
  {% endif %}
</div>
